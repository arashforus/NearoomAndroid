<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IntroSliderActivity_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroSliderActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/IntroSliderActivity_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager2.widget.ViewPager2>

    <Button
        android:id="@+id/IntroSliderActivity_StartButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lets Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/IntroSliderActivity_Line"
        android:layout_width="0dp"
        android:layout_height="1sp"
        android:alpha="0"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/IntroSliderActivity_StartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/IntroSliderActivity_Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/IntroSliderActivity_Dot1"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_baseline_dot_empty"
            app:tint="@android:color/black" />

        <ImageView
            android:id="@+id/IntroSliderActivity_Dot2"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_baseline_dot_empty"
            app:tint="@android:color/black" />

        <ImageView
            android:id="@+id/IntroSliderActivity_Dot3"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_baseline_dot_empty"
            app:tint="@android:color/black" />

        <ImageView
            android:id="@+id/IntroSliderActivity_Dot4"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_baseline_dot_empty"
            app:tint="@android:color/black" />

        <ImageView
            android:id="@+id/IntroSliderActivity_Dot5"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_baseline_dot_empty"
            app:tint="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>