<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DialogueNearoomFragmentMenu_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/DialogueNearoomFragmentMenu_Pic"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:padding="10sp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>

                <TextView
                    android:id="@+id/DialogueNearoomFragmentMenu_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textAlignment="viewStart"
                    android:textColor="@color/recyclerViewNearoomListName"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>

                <TextView
                    android:id="@+id/DialogueNearoomFragmentMenu_Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/recyclerViewNearoomListCategory" />

                <TextView
                    android:id="@+id/DialogueNearoomFragmentMenu_Distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="45sp"
                    android:text="502 m"
                    android:textColor="@color/recyclerViewNearoomListDistance"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/DialogueNearoomFragmentMenu_Joined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/recyclerViewNearoomListNumberJoin" />

                <TextView
                    android:id="@+id/DialogueNearoomFragmentMenu_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="TextView"
                    android:textAlignment="viewStart"
                    android:textColor="@color/recyclerViewNearoomListDescription" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:visibility="gone" />

        <Button
            android:id="@+id/DialogueNearoomFragmentMenu_JoinButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5sp"
            android:text="Join this nearoom" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>